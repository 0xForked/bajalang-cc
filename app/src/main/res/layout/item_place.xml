<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/eighty_dp"
    android:layout_margin="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layContentClick"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/ten_dp"
        android:focusable="true">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_local_library"
            android:id="@+id/LogoContent"
            android:contentDescription="@string/desc_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/item_name"
            android:capitalize="sentences"
            android:layout_marginTop="3dp"
            android:textSize="@dimen/eighteen_sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/txtNameContent"
            android:layout_toEndOf="@+id/LogoContent"
            android:layout_marginStart="@dimen/twenty_dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plusMin"
                android:layout_marginEnd="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/pointer"
                android:layout_marginStart="2dp"
                android:id="@+id/txtLength" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>