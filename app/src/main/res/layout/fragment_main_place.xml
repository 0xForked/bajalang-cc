<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/twenty_dp">

    <RelativeLayout
        android:layout_width="@dimen/three_hundred_dp"
        android:layout_height="@dimen/one_hundred_fifty_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_one"
            android:layout_width="@dimen/one_hundred_forty_dp"
            android:layout_height="@dimen/one_hundred_forty_dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            card_view:cardCornerRadius="@dimen/five_dp">
            <RelativeLayout
                android:id="@+id/layout_main_restaurant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:focusable="true">
                <ImageView
                    android:layout_width="@dimen/sixty_dp"
                    android:layout_height="@dimen/sixty_dp"
                    android:src="@drawable/ic_restaurant_black"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/LogoContentOne"
                    android:contentDescription="@string/desc_logo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/Restaurant"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="3dp"
                    android:textSize="@dimen/fifteen_sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/txtNameContentOne"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/twenty_dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_two"
            android:layout_width="@dimen/one_hundred_forty_dp"
            android:layout_height="@dimen/one_hundred_forty_dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            card_view:cardCornerRadius="@dimen/five_dp">
            <RelativeLayout
                android:id="@+id/layout_main_school"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:focusable="true">
                <ImageView
                    android:layout_width="@dimen/sixty_dp"
                    android:layout_height="@dimen/sixty_dp"
                    android:src="@drawable/ic_local_library"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/LogoContentTwo"
                    android:contentDescription="@string/desc_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/School"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="3dp"
                    android:textSize="@dimen/fifteen_sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/txtNameContentTwo"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/twenty_dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
